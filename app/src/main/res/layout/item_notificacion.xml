<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_matricula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Matrícula: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_matricula"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/text_importe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Importe: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_descripcion"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_aceptar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_importe"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btn_rechazar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rechazar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_importe"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>